generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id               Int       @id @default(autoincrement())
  username         String    @unique
  email            String    @unique
  password         String
  role             Role
  resetToken       String? // token reset
  resetTokenExpiry DateTime? // thời hạn token
  createtime       DateTime  @default(now())
  householdId      Int?      @unique

  HouseHolds               HouseHolds?         @relation("account") // tài khoản của hộ gia đình
  TemporaryResidenceSubmit TemporaryResident[] @relation("tempResSubmit")
  TemporaryResidenceReview TemporaryResident[] @relation("tempResReview")
  TemporaryAbsenceSubmit   TemporaryAbsence[]  @relation("tempAbsenceSubmit")
  TemporaryAbsenceReview   TemporaryAbsence[]  @relation("tempAbsenceReview")
  RcSubmit                 ResidentChanges[]   @relation("RcSubmit")
  RcReviews                ResidentChanges[]   @relation("RcReview")
  HcSubmit                 HouseholdChanges[]  @relation("HcSubmit")
  HcReview                 HouseholdChanges[]  @relation("HcReview")
}

enum Role {
  USER
  ADMIN
  ACCOUNTANT
}

model HouseHolds {
  id              Int             @id @default(autoincrement())
  houseHoldCode   Int             @unique // số hộ khẩu
  apartmentNumber String          @unique // số căn hộ
  buildingNumber  String // Số nhà
  street          String // Tên đường / ngõ
  ward            String // Xã / Phường
  province        String // Tỉnh / Thành phố
  status          HouseHoldStatus @default(ACTIVE)
  createtime      DateTime        @default(now())

  headID Int      @unique // id chủ hộ
  head   Resident @relation("headOfHouse", fields: [headID], references: [id])

  resident Resident[] @relation("houseMembers") // nhân khẩu trong 1 hộ

  userID  Int   @unique
  account Users @relation("account", fields: [userID], references: [id]) // một hộ có 1 tài khoản

  FeeAssignment FeeAssignment[]

  TemporaryResidence TemporaryResident[] @relation("tempaResHousehold")
}

enum HouseHoldStatus {
  ACTIVE
  MOVED
  DELETE
}

model Resident {
  id                 Int                @id @default(autoincrement())
  nationalId         String             @unique // cccd
  phoneNumber        String             @unique
  email              String             @unique
  fullname           String
  dateOfBirth        DateTime
  gender             Gender
  relationshipToHead RelationshipToHead
  placeOfOrigin      String
  occupation         String
  workingAdress      String
  residentStatus     ResidenceStatus    @default(NORMAL)
  informationStatus  InformationStatus  @default(PENDING)
  houseHoldId        Int? // hộ khẩu

  houseHold   HouseHolds? @relation("houseMembers", fields: [houseHoldId], references: [id])
  headedHouse HouseHolds? @relation("headOfHouse")
  TemporaryResidence TemporaryResident[] @relation("tempResidence")
  TemporaryAbsence   TemporaryAbsence[]  @relation("tempAbsence")
  ResidentChanges ResidentChanges[] @relation("residentChange")
  HouseholdChanges HouseholdChanges[] @relation("householdChange")
}

enum ResidenceStatus {
  NORMAL
  TEMP_ABSENT
  TEMP_RESIDENT
  MOVE_OUT
}

enum InformationStatus {
  PENDING
  APPROVED
  REJECTED
  DELETED
  ENDED
}

enum Gender {
  MALE
  FEMALE
}

enum RelationshipToHead {
  HEAD
  WIFE
  HUSBAND
  SON
  DAUGHTER
  FATHER
  MOTHER
  PERMANENT_RESIDENCE
  TEMPORAY_RESIDENCE
  OTHER
}

model TemporaryResident {
  id                Int               @id @default(autoincrement())
  residentId        Int
  householdId       Int
  startDate         DateTime
  endDate           DateTime
  reason            String
  address           String
  informationStatus InformationStatus @default(PENDING)
  submittedUserId   Int
  submittedAt       DateTime          @default(now())
  reviewedAdminId   Int?
  reviewedAt        DateTime?

  household     HouseHolds @relation("tempaResHousehold", fields: [householdId], references: [id])
  resident      Resident   @relation("tempResidence", fields: [residentId], references: [id])
  submittedUser Users      @relation("tempResSubmit", fields: [submittedUserId], references: [id])
  reviewedAdmin Users?     @relation("tempResReview", fields: [reviewedAdminId], references: [id])
}

model TemporaryAbsence {
  id                Int               @id @default(autoincrement())
  residentId        Int
  startDate         DateTime
  endDate           DateTime
  reason            String
  destination       String // Nơi đến tạm vắng
  informationStatus InformationStatus @default(PENDING)
  submittedUserId   Int
  submittedAt       DateTime          @default(now())
  reviewedAdminId   Int?
  reviewedAt        DateTime?

  resident      Resident @relation("tempAbsence", fields: [residentId], references: [id])
  submittedUser Users    @relation("tempAbsenceSubmit", fields: [submittedUserId], references: [id])
  reviewedAdmin Users?   @relation("tempAbsenceReview", fields: [reviewedAdminId], references: [id])
}

model ResidentChanges {
  id            Int       @id @default(autoincrement())
  residentId    Int
  action        Actions
  oldData       Json?
  newData       Json?
  submitUserId  Int
  submitAt      DateTime  @default(now())
  reviewAdminId Int?
  reviewAt      DateTime?

  resident      Resident @relation("residentChange", fields: [residentId], references: [id])
  submittedUser Users    @relation("RcSubmit", fields: [submitUserId], references: [id])
  reviewedAdmin Users?   @relation("RcReview", fields: [reviewAdminId], references: [id])
}

model HouseholdChanges {
  id            Int       @id @default(autoincrement())
  householdId   Int
  action        Actions
  oldData       Json?
  newData       Json?
  submitUserId  Int
  submitAt      DateTime  @default(now())
  reviewAdminId Int?
  reviewAt      DateTime?

  resident      Resident @relation("householdChange", fields: [householdId], references: [id])
  submittedUser Users    @relation("HcSubmit", fields: [submitUserId], references: [id])
  reviewedAdmin Users?   @relation("HcReview", fields: [reviewAdminId], references: [id])
}

enum Actions {
  CREATE
  DELETE
  UPDATE
}

// fee
enum FeeType {
  MANDATORY // Thu bắt buộc
  VOLUNTARY // Đóng góp tự nguyện
}

enum FeeFrequency {
  ONE_TIME // Không định kỳ
  MONTHLY // Hàng tháng
  YEARLY // Hàng năm
}

model Fee {
  id            Int          @id @default(autoincrement())
  name          String
  description   String?
  type          FeeType
  frequency     FeeFrequency
  ratePerPerson Float? // Mức phí mỗi nhân khẩu
  minium        Float?       @default(0)
  startDate     DateTime?
  endDate       DateTime?
  createdAt     DateTime     @default(now())

  assignments FeeAssignment[]
}

model FeeAssignment {
  id          Int      @id @default(autoincrement())
  feeId       Int
  householdId Int
  amountDue   Float // Số tiền phải nộp = nhân khẩu × đơn giá
  dueDate     DateTime
  isPaid      Boolean  @default(false)

  fee       Fee        @relation(fields: [feeId], references: [id])
  household HouseHolds @relation(fields: [householdId], references: [id])

  payments Payment? @relation("feePayment")
}

model Payment {
  id              Int      @id @default(autoincrement())
  feeAssignmentId Int      @unique
  amountPaid      Float
  paidDate        DateTime @default(now())
  note            String?

  feeAssignment FeeAssignment @relation("feePayment", fields: [feeAssignmentId], references: [id])
}
