generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id               Int         @id @default(autoincrement())
  username         String      @unique
  email            String      @unique
  password         String
  role             Role
  createtime       DateTime    @default(now())
  resetToken       String?
  resetTokenExpiry DateTime?
  householdId      Int?        @unique
  HouseHolds       HouseHolds? @relation("account")
}

model HouseHolds {
  id              Int             @id @default(autoincrement())
  houseHoldCode   Int             @unique
  apartmentNumber String          @unique
  buildingNumber  String
  street          String
  ward            String
  province        String
  status          HouseHoldStatus @default(ACTIVE)
  createtime      DateTime        @default(now())
  headID          Int             @unique
  userID          Int             @unique
  FeeAssignment   FeeAssignment[]
  head            Resident        @relation("headOfHouse", fields: [headID], references: [id])
  account         Users           @relation("account", fields: [userID], references: [id])
  resident        Resident[]      @relation("houseMembers")
}

model Resident {
  id                 Int                  @id @default(autoincrement())
  nationalId         String               @unique
  phoneNumber        String               @unique
  email              String               @unique
  fullname           String
  dateOfBirth        DateTime
  gender             Gender
  relationshipToHead RelationshipToHead
  placeOfOrigin      String
  occupation         String
  workingAdress      String
  houseHoldId        Int?
  residencStatus     ResidenceStatus      @default(NORMAL)
  headedHouse        HouseHolds?          @relation("headOfHouse")
  houseHold          HouseHolds?          @relation("houseMembers", fields: [houseHoldId], references: [id])
  TemporaryAbsence   TemporaryAbsence[]
  TemporaryResidence TemporaryResidence[]
}

model Fee {
  id            Int             @id @default(autoincrement())
  name          String
  description   String?
  type          FeeType
  frequency     FeeFrequency
  ratePerPerson Float?
  minium        Float?          @default(0)
  startDate     DateTime?
  endDate       DateTime?
  createdAt     DateTime        @default(now())
  assignments   FeeAssignment[]
}

model FeeAssignment {
  id          Int        @id @default(autoincrement())
  feeId       Int
  householdId Int
  amountDue   Float
  dueDate     DateTime
  isPaid      Boolean    @default(false)
  fee         Fee        @relation(fields: [feeId], references: [id])
  household   HouseHolds @relation(fields: [householdId], references: [id])
  Payment     Payment?
}

model Payment {
  id              Int           @id @default(autoincrement())
  feeAssignmentId Int           @unique
  amountPaid      Float
  imageUrl        String? 
  imagePath       String?
  status          InformationStatus @default(PENDING)
  paidDate         DateTime      @default(now())
  note            String?
  FeeAssignment   FeeAssignment @relation(fields: [feeAssignmentId], references: [id])
}

model TemporaryAbsence {
  id          Int       @id @default(autoincrement())
  residentId  Int
  startDate   DateTime
  endDate     DateTime?
  reason      String?
  destination String?
  Resident    Resident  @relation(fields: [residentId], references: [id])
}

model TemporaryResidence {
  id         Int       @id @default(autoincrement())
  residentId Int
  startDate  DateTime
  endDate    DateTime?
  reason     String?
  address    String
  Resident   Resident  @relation(fields: [residentId], references: [id])
}

enum Role {
  USER
  ADMIN
  ACCOUNTANT
}

enum HouseHoldStatus {
  ACTIVE
  MOVED
  DELETE
}

enum ResidenceStatus {
  NORMAL
  TEMP_ABSENT
  MOVE_OUT
}

enum Gender {
  MALE
  FEMALE
}

enum RelationshipToHead {
  HEAD
  WIFE
  HUSBAND
  SON
  DAUGHTER
  FATHER
  MOTHER
  OTHER
}

enum FeeType {
  MANDATORY
  VOLUNTARY
}

enum FeeFrequency {
  ONE_TIME
  MONTHLY
  YEARLY
}

enum InformationStatus {
  PENDING
  APPROVED
  REJECTED
  DELETED
}
